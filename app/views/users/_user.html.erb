<div id="<%= dom_id user %>">
  <p>
    <div class="orcid_identifier">
      <%= full_orcid_display(user.orcid) %>
    </div>
  </p>
</div>

<% if user.valid_token %>
  <p>
  Your token  grants Princeton access to read and update your ORCID record until <%= user.valid_token.expiration.strftime('%m/%d/%Y') %>.
  </p>
<% end %>
