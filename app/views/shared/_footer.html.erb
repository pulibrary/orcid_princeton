<div id="sponsors-section">
    <h2 id="sponsors-title">Project Sponsors</h2>

    <div id="sponsors-display">
      <div class="sponsors-component" id="pul-logo">
        <img src="<%= vite_asset_path('images/pul_sponsor_logo.png') %>" alt="Princeton University Library logo" />
      </div>
    
      <div class="sponsors-component" id="orpa-logo">
        <img src="<%= vite_asset_path('images/orpa_sponsor_logo.png') %>" alt="Princeton University Office of the Dean for Research and Project Administration logo" />
      </div>
    
      <div class="sponsors-component" id="prds-logo">
        <img src="<%= vite_asset_path('images/prds_sponsor_logo.png') %>" alt="Princeton Research Data Service logo" />
      </div>
    
      <div class="sponsors-component" id="orcid-logo">
        <img src="<%= vite_asset_path('images/orcid_sponsor_logo.png') %>" alt="ORCID: Connecting research and researchers logo" />
      </div>
    </div>
  </div>

<footer>
  <div class="lux">
    <lux-library-footer></lux-library-footer>
  </div>

<div class="p-2 text-left bg-light">
  <div class="deployment-version" >
      <text-style variation="strong">
        Version:
        <% @version = VersionFooter.info %>
        <% if @version[:stale] %>
          (stale)
        <% end %>
        <span title="<%= @version[:sha] %>">
          <% if @version[:tagged_release] %>
            <a href="https://github.com/pulibrary/orcid_princeton/releases/tag/<%= @version[:branch] %>" target="_blank"><%= @version[:branch] %></a>
          <% else %>
            <%= @version[:branch] %>,
          <% end %>
          last updated: <%= @version[:version] %>
        </span>
      </text-style>
    </div>
  </div>
</footer>